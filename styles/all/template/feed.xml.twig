<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ FEED_LANG }}">
    <link rel="self" type="application/atom+xml" href="{{ SELF_LINK }}" />

    <title>{{ FEED_TITLE }}</title>
    <subtitle>{{ FEED_SUBTITLE }}</subtitle>
    <link href="{{ FEED_LINK }}" />

    <updated>{{ FEED_UPDATED }}</updated>

    <author><name><![CDATA[{{ FEED_AUTHOR }}]]></name></author>
    <id>{{ SELF_LINK }}</id>

    {% for row in loops.feed %}

    <entry>
        <author><name><![CDATA[{{ row.item_author }}]]></name></author>
        <updated>{{ row.item_date }}</updated>
        <id>{{ row.item_link }}</id>
        <link href="{{ row.item_link }}"/>
        <title type="html"><![CDATA[{{ row.item_title }}]]></title>
        <content type="html" xml:base="{{ row.item_link }}"><![CDATA[{{ row.item_description }}]]></content>
    </entry>
    {% endfor %}

</feed>
